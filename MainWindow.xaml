<Window x:Class="AT1_Sensor.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AT1_Sensor"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Label Content="Sensing4U " HorizontalAlignment="Left" Height="30" Margin="15,14,0,0" VerticalAlignment="Top" Width="70" FontWeight="Bold"/>
        <Button Content="SAVE" HorizontalAlignment="Left" Height="30" Margin="525,384,0,0" VerticalAlignment="Top" Width="70"/>
        <Button Content="LOAD" HorizontalAlignment="Left" Height="30" Margin="625,384,0,0" VerticalAlignment="Top" Width="70"/>
        <Grid>
            <DataGrid x:Name="DataGrid" HorizontalAlignment="Left" Height="150" Margin="20,49,0,0" VerticalAlignment="Top" Width="750" d:ItemsSource="{d:SampleData ItemCount=5}"/>
            <Label Content="Average values" HorizontalAlignment="Left" Height="25" Margin="20,219,0,0" VerticalAlignment="Top" Width="95"/>
            <TextBox HorizontalAlignment="Left" Height="30" Margin="25,249,0,0" TextWrapping="Wrap" Text="Average" VerticalAlignment="Top" Width="65"/>
            <TextBox x:Name="UB_txtBox" HorizontalAlignment="Left" Height="30" Margin="265,249,0,0" TextWrapping="Wrap" Text="UB" VerticalAlignment="Top" Width="55"/>
            <TextBox x:Name="LB_txtBox" HorizontalAlignment="Left" Height="30" Margin="335,249,0,0" TextWrapping="Wrap" Text="LB" VerticalAlignment="Top" Width="55"/>
            <Label Content="Input Bounds:" HorizontalAlignment="Left" Height="30" Margin="260,214,0,0" VerticalAlignment="Top" Width="75"/>
            <TabControl HorizontalAlignment="Left" Height="35" Margin="565,-1,0,0" VerticalAlignment="Top" Width="225">
                <TabItem Header="TabItem">
                    <Grid Background="#FFE5E5E5"/>
                </TabItem>
                <TabItem Header="TabItem">
                    <Grid Background="#FFE5E5E5"/>
                </TabItem>
            </TabControl>


        </Grid>

    </Grid>
</Window>
